<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.offices.OfficesFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/office_guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/guideline_details_begin" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/office_guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/guideline_details_end" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_offices"
        android:layout_width="@dimen/recyclerView_width"
        android:layout_height="@dimen/recyclerView_height"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/office_guideline_end"
        app:layout_constraintStart_toStartOf="@id/office_guideline_start"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>