<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:constraint_referenced_ids="welcome_imageView"
        app:layout_constraintGuide_percent="0.3" />

    <ImageView
        android:id="@+id/welcome_imageView"
        android:layout_width="@dimen/imageView_width_by_fill"
        android:layout_height="@dimen/imageView_height"
        android:adjustViewBounds="true"
        android:contentDescription="@string/welcome_image"
        android:scaleType="fitXY"
        android:src="@drawable/title_image"
        app:layout_constraintBottom_toBottomOf="@id/guideline_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_imageView"
        android:layout_width="@dimen/imageView_width"
        android:layout_height="@dimen/imageView_height"
        android:layout_marginTop="@dimen/imageView_marginTop"
        android:contentDescription="@string/aston_logo"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@id/subtitle"
        app:layout_constraintEnd_toStartOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/guideline_image" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        style="@style/TextViewTitlesStyle"
        android:text="ИТ-решения для развития бизнеса"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toEndOf="@id/logo_imageView"
        app:layout_constraintTop_toTopOf="@id/logo_imageView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/subtitle"
        style="@style/TextViewDescriptionStyle"
        android:text="Разработка программного обеспечения"
        android:textSize="@dimen/textView_description_textSize"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toTopOf="@id/about_us_title"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toEndOf="@id/logo_imageView"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="subtitle,logo_imageView" />

    <Space
        android:id="@+id/spacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/about_us_title"
        style="@style/TextViewTitlesStyle"
        android:text="О нас:"
        app:layout_constraintBottom_toTopOf="@id/about_us_description"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/spacer" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/about_us_description"
        style="@style/TextViewDescriptionStyle"
        android:text="Aston - компания по разработке ПО с полным циклом услуг. Уже 15 лет мы помогаем заказчикам по всему мру трансформировать бизнес, создавая эффективные мобильные и десктопные решения."
        android:textSize="@dimen/textView_about_company_textSize"
        app:layout_constraintBottom_toTopOf="@id/office_locations"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/about_us_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/office_locations"
        style="@style/TextViewTitlesStyle"
        android:gravity="center"
        android:text="Офисы"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/about_us_description" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/moscow_location"
        style="@style/TextViewChipsStyle"
        android:text="Москва" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/kazan_location"
        style="@style/TextViewChipsStyle"
        android:text="Казань" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rostov_location"
        style="@style/TextViewChipsStyle"
        android:text="Ростов-на-Дону" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/minsk_location"
        style="@style/TextViewChipsStyle"
        android:text="Минск" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/gomel_location"
        style="@style/TextViewChipsStyle"
        android:text="Гомель" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_locations"
        android:layout_width="@dimen/flow_width"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="moscow_location,kazan_location,rostov_location,minsk_location,gomel_location"
        app:flow_horizontalBias="0"
        app:flow_horizontalGap="@dimen/flow_horizontalGap"
        app:flow_horizontalStyle="packed"
        app:flow_verticalGap="@dimen/flow_verticalGap"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/office_locations" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_contacts"
        style="@style/CategoryButtonsStyle"
        android:layout_marginStart="@dimen/button_marginStart"
        android:text="Контакты"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        app:layout_constraintEnd_toStartOf="@id/button_vacancies"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/flow_locations"
        app:layout_constraintVertical_bias="0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_vacancies"
        style="@style/CategoryButtonsStyle"
        android:text="Вакансии"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        app:layout_constraintEnd_toStartOf="@id/button_gallery"
        app:layout_constraintStart_toEndOf="@id/button_contacts"
        app:layout_constraintTop_toBottomOf="@id/flow_locations"
        app:layout_constraintVertical_bias="0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_gallery"
        style="@style/CategoryButtonsStyle"
        android:layout_marginEnd="@dimen/button_marginEnd"
        android:text="Гелерея"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toEndOf="@id/button_vacancies"
        app:layout_constraintTop_toBottomOf="@id/flow_locations"
        app:layout_constraintVertical_bias="0" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_visibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="office_locations,flow_locations,button_contacts,button_vacancies,button_gallery" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/progressBar_width"
        android:layout_height="@dimen/progressBar_height"
        android:layout_margin="@dimen/progressBar_margin"
        android:padding="@dimen/progressBar_padding"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/about_us_description" />

</androidx.constraintlayout.widget.ConstraintLayout>