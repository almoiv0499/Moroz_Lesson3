<resources>
    <!-- Base application theme. -->
    <style name="Theme.Moroz_Lesson3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_app</item>
        <item name="colorPrimaryVariant">@color/color_app</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewChipsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/chips_background</item>
        <item name="android:padding">@dimen/chips_padding</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CategoryButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/button_marginTop</item>
        <item name="android:textSize">@dimen/button_textSize</item>
    </style>

    <style name="TextViewTitlesStyle">
        <item name="android:layout_marginTop">@dimen/textView_marginTop</item>
        <item name="android:textSize">@dimen/textView_titles_textSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">@dimen/textView_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewDescriptionStyle">
        <item name="android:layout_width">@dimen/textView_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewLandTitlesStyle">
        <item name="android:layout_marginTop">@dimen/textView_marginTop</item>
        <item name="android:textSize">@dimen/textView_titles_land_textSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">@dimen/textView_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>