<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moroz_Lesson3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ImageViewInGridLayoutStyle">
        <item name="android:layout_width">@dimen/imageView_size_grid</item>
        <item name="android:layout_height">@dimen/imageView_size_grid</item>
        <item name="android:layout_margin">@dimen/imageView_margins_grid</item>
        <item name="shapeAppearanceOverlay">@style/CornersImageViewStyle</item>
    </style>

    <style name="NestedLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ImageViewInLinearLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/imageView_size_linear</item>
        <item name="android:layout_margin">@dimen/imageView_margins_linear</item>
        <item name="shapeAppearanceOverlay">@style/CornersImageViewStyle</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ImageViewInFrameLayoutStyle">
        <item name="android:layout_width">@dimen/imageView_size_frame</item>
        <item name="android:layout_height">@dimen/imageView_size_frame</item>
        <item name="android:layout_margin">@dimen/imageView_margins_frame</item>
        <item name="shapeAppearanceOverlay">@style/CornersImageViewStyle</item>
    </style>
    
    <style name="CornersImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="color">@color/white</item>
    </style>
</resources>